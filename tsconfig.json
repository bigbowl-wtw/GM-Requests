{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "ES2015",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "tampermonkey"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}